<%- include('../partials/header') %>

<div class="container">
    <% if(error && error.length > 0) { %>
    <div class="alert alert-danger">
        <%= error %>
    </div>
    <% } %>
    <% if(success && success.length > 0) { %>
    <div class="alert alert-success">
        <%= success %>
    </div>
    <% } %>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>
                <span class="badge badge-secondary badge-pill"><%= session.cart.totalQuantity %></span>
            </h4>
            <ul class="list-group mb-3">
                <% for(product in products){ %>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h5 class="my-0"><%= products[product].name %></h5>
                        <!-- <small class="text-muted">Brief description</small> -->
                        <small>Quantity <%= products[product].quantity %></small>

                        <div>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a href="/addtocart/<%= product %>" class="btn btn-primary btn-sm">Add</a>
                                <a href="/removefromcart/<%= product %>" class="btn btn-danger btn-sm">Remove</a>
                            </div>
                        </div>
                    </div>
                    <span class="text-muted">$<%= products[product].price %></span>
                </li>
                <% } %>
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (USD)</span>
                    <strong>$<%= totalPrice %></strong>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-4">
            <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>